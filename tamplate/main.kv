<GameWidget>:
    game_active: True

    canvas:
        Color:
            rgba: (1, 1, 1, 1)  # ใช้ค่า alpha = 1 เพื่อให้วัตถุแสดง
        Rectangle:
            id: obj
            pos: root.obj_pos  # ใช้ตำแหน่งที่กำหนดใน root.obj_pos
            size: root.obj_size  # ใช้ขนาดที่กำหนดใน root.obj_size
            source: 'object_image.png'  # ใช้รูปภาพสำหรับ object

    Label:
        id: combo_label
        text: str(root.combo)
        font_size: root.combo_font_size
        size_hint: None, None
        size: 150, 50
        color: 0, 1, 0, 1
        center_x: root.width / 1.2
        center_y: root.height / 1.2
        top: root.height - 50

    Label:
        id: start_label
        text: "Press R to Start"
        font_size: "40sp"
        size_hint: None, None
        size: 400, 100
        center_x: root.width / 2
        center_y: root.height / 2 + 100
        opacity: 1 if not root.game_active else 0

    Label:
        id: game_over_label
        text: "GAME OVER"
        font_size: "50sp"
        size_hint: None, None
        size: 300, 100
        color: 1, 0, 0, 1
        center_x: root.width / 2
        center_y: root.height / 2
        opacity: 0
